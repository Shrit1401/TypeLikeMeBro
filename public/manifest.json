{
  "manifest_version": 3,
  "name": "TypeLikeMeBro",
  "version": "1.0.0",
  "description": "A Chrome extension for typing practice and improvement",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "96": "icons/icon96.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": ["https://twitter.com/*", "https://x.com/*"]
}
